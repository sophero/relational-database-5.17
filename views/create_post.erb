<% if session[:user_id] %>

    <h1>Create new blog post</h1>

    <div class="create-post-form__container">
        <form id="create-post-form" action="/create_post" method="post">
            <div class="create-post-form__title">
                <input type="text" name="title" placeholder="Title">
            </div>

            <div class="create-post-form__category">
                <input type="text" name="category" placeholder="Category">
            </div>

            <div class="create-post-form__content">
                <textarea id="create-post-form" name="content" rows="8" cols="80"></textarea>
            </div>

            <input type="submit">
        </form>
    </div>

<% else %>

    <p>You need to be logged in to make a post.</p>

<% end %>
